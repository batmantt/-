  align-items: center;
  background-color: white;
}

.image {
  height: 500px;
  width: 100%;
}

.shopping_img {
  width: 130rpx;
  height: 130rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.text-NI {
