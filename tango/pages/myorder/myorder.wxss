/* pages/myorder/myorder.wxss */
.myorder-container{
  min-height:100vh;
  font-size:28rpx;
  background: #f4f4f4;
  padding: 28rpx 24rpx;
  box-sizing: border-box;
}
.myorder-container .order-item{
  height:180rpx;
  padding:0 24rpx;
  margin-bottom:28rpx;
  background: #fff;
  display:flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
}
.myorder-container .order-item .shop-img{
  width:140rpx;
  height:140rpx;
  border-radius:5rpx;
  overflow:hidden;
}
.myorder-container .order-item .shop-img .img{
  width:100%;
  height:100%;
}
.myorder-container .order-item .card{
  width:70rpx;
  align-self: flex-start;
}
.myorder-container .order-item .card .img{
  width:70rpx;
  height:160rpx;
}